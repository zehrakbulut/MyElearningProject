@model MyElearningProject.DAL.Entities.Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Kategori Güncelleme Sayfası</h2>

<form method="post">
    <label>Kategori ID</label>
    @Html.TextBoxFor(x=>x.CategoryID, new {@class="form-control"})
    <br /><br />
    @Html.TextBoxFor(x=>x.CategoryName, new {@class="form-control" })
    <br /><br />
    <button class="btn btn-primary">Kategoriyi Güncelle</button>
</form>