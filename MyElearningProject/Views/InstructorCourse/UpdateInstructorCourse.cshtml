@model MyElearningProject.DAL.Entities.Course
@{ ViewBag.Title = "UpdateInstructorCourse";
    Layout = "~/Views/InstructorLayout/Index.cshtml"; }

<h2>Hakkımızda Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x => x.CourseID)
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Fiyat</label>
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    <label>Süre</label>
    @Html.TextBoxFor(x => x.Duration, new { @class = "form-control" })
    <br />
    <label>Resim</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <label>Kategoriler</label>
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.categories, new { @class = "form-control" })
    <br />
    <label>Eğitmenler</label>
    @Html.DropDownListFor(x => x.InstructorID, (List<SelectListItem>)ViewBag.instructors, new { @class = "form-control" })
    <br /><br />
    <button class="btn btn-primary">Kaydet</button>
</form>