@model MyElearningProject.DAL.Entities.Student

<div class="card">
    <img class="card-img-top" src="https://elearningindustry.com/wp-content/uploads/2023/04/Shutterstock_1960099390.jpg" alt="Card image cap">
    <div class="card-block little-profile text-center">
        <h3 class="m-b-0">@Model.Name @Model.Surname</h3>
        <p>@Model.Email</p>
        <div class="row text-center m-t-20">
            <div class="col-lg-4 col-md-4 m-t-20">
                <h3 class="m-b-0 font-light">@ViewBag.StudentCourseCount</h3><small>Kurslarım</small>
            </div>
            <div class="col-lg-4 col-md-4 m-t-20">
                <h3 class="m-b-0 font-light">@ViewBag.StudentCommentCount</h3><small>Yorum</small>
            </div>
            <div class="col-lg-4 col-md-4 m-t-20">
                <h3 class="m-b-0 font-light">8</h3><small>Puan</small>
            </div>
        </div>
    </div>
</div>
